<Application x:Class="IDQ.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodelsmain="clr-namespace:IDQ.WPF.ViewModels.Main"
             xmlns:viewsmain="clr-namespace:IDQ.WPF.Views.Main"
             xmlns:local="clr-namespace:IDQ.WPF"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/GenericStyles.xaml" />
                <ResourceDictionary Source="/Styles/NavigationBarStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodelsmain:mainIngresosViewModel}">
                <viewsmain:mainIngresosView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodelsmain:mainProductosViewModel}">
                <viewsmain:mainProductosView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodelsmain:mainVentasViewModel}">
                <viewsmain:mainVentasView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
