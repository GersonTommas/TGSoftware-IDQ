<UserControl x:Class="IDQ.WPF.Controls.ctrlClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDQ.WPF.Controls"
             mc:Ignorable="d"
             x:Name="thisControl">
    <UserControl.DataContext>
        <local:ClockViewModel />
    </UserControl.DataContext>
    
    <GroupBox>
        <Grid VerticalAlignment="Center">
            <Label VerticalAlignment="Center" Content="{Binding stringLongTime, FallbackValue=00:00:00}" FontSize="{Binding ElementName=thisControl, Path=FontSize}" Visibility="{Binding ElementName=thisControl, Path=hasSeconds, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Label VerticalAlignment="Center" Content="{Binding stringShortTime, FallbackValue=00:00}" FontSize="{Binding ElementName=thisControl, Path=FontSize}" Visibility="{Binding ElementName=thisControl, Path=hasSeconds, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" />
        </Grid>
    </GroupBox>
</UserControl>
