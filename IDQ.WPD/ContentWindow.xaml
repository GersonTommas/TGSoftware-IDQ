<Window x:Class="IDQ.WPF.ContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDQ.WPF"
        xmlns:views="clr-namespace:IDQ.WPF.Views"
        xmlns:viewmodels="clr-namespace:IDQ.WPF.ViewModels"
        mc:Ignorable="d"
        Title="ContentWindow" Height="600" Width="800" Padding="0" Margin="0" Background="{StaticResource Brush.Window.Upper.Background.Dark}">

    <TabControl Padding="0" Margin="0" Template="{DynamicResource verticalTabControlTemplate}" BorderThickness="0" Background="{StaticResource Brush.Window.Upper.Background.Dark}" TabStripPlacement="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="{StaticResource Brush.Window.Inner.Background.Soft}"/>
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="270" />
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource Brush.Window.Upper.Background.Dark}"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource Brush.Navigation.Background.Selected}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabItem Template="{StaticResource verticalTabControlTabItemTemplate}" Header="Options">
            
        </TabItem>
        
        <TabItem IsSelected="True" Template="{StaticResource verticalTabControlTabItemTemplate}" Header="Principal">
            <views:MainView />
        </TabItem>
        <TabItem Template="{StaticResource verticalTabControlTabItemTemplate}" Header="Venta">
            <TabControl Template="{StaticResource verticalTabControlTemplate}" BorderThickness="0" Background="{StaticResource Brush.Window.Upper.Background.Dark}">
                <TabItem Header="Venta 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="0" />
                        </Grid.ColumnDefinitions>
                        
                        <views:VentasView Grid.Column="0" />
                        
                    </Grid>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Template="{StaticResource verticalTabControlTabItemTemplate}" Header="Ingreso">

        </TabItem>
        <TabItem Header="Consumos">
            <views:ConsumosView />
        </TabItem>
        
        <TabItem Template="{StaticResource verticalTabControlTabItemTemplate}" Header="Cuentas">

        </TabItem>
        <TabItem Template="{StaticResource verticalTabControlTabItemTemplate}" Header="Cerrar Sesion">

        </TabItem>
    </TabControl>
</Window>
