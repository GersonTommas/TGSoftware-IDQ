<Window x:Class="IDQ.WPF.HelperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDQ.WPF"
        mc:Ignorable="d"
        x:Name="thisWindow"
        Title="HelperWindow" Background="{StaticResource Brush.Window.Upper.Background.Dark}" ResizeMode="NoResize" SizeToContent="Height" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Normal" BorderThickness="0">
    <Window.DataContext>
        <local:HelperWindowViewModel />
    </Window.DataContext>
    
    <Border BorderThickness="1" BorderBrush="Gray">
        <ContentControl Content="{Binding Navigator.CurrentViewModel}" Focusable="False" />
    </Border>
</Window>
